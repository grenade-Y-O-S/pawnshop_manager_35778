<div class='pawn_result_main'>
  <div class='customer_data_box'>
    <div class='box_title data_back'>
      お客様情報
    </div>
    <div>
      <div class='customer_data_line'>
        <div class='interest_result_category'>
          お客様氏名
        </div>
        <div class='flex_left result_data'>
          <div class='first_name_column'>
            <%= customer.last_name %>
          </div>
          <div>
            <%= customer.first_name %>
          </div>
        </div>
      </div>
      <div class='customer_data_line'>
        <div class='interest_result_category'>
          (カタカナ)
        </div>
        <div class='flex_left result_data'>
          <div class='first_name_column'>
            <%= customer.last_name_kana %>
          </div>
          <div>
            <%= customer.first_name_kana %>
          </div>
        </div>
      </div>
      <div class='customer_data_line'>
        <div class='interest_result_category'>
          住所
        </div>
        <div class='result_data'>
          <%= customer.address %>
        </div>
      </div>
      <div class='customer_data_line'>
        <div class='interest_result_category'>
          備考
        </div>
        <div class='result_data'>
          <%= customer.remarks %>
        </div>
      </div>
    </div>
  </div>
  <div class='pawn_data_box'>
    <div class='box_title data_back'>
      品物情報
    </div>
    <div class='data_back'>
      <div class='customer_data_line'>
        <div class='result_category'>
          品物名
        </div>
        <div class='result_data'>
          <%= purchase.buy_item_name %>
        </div>
      </div>
      <div class='customer_data_line'>
        <div class='result_category'>
          金額
        </div>
        <div class='result_data'>
          <%= purchase.buy_item_price %>
        </div>
      </div>
      <div class='customer_data_line'>
        <div class='result_category'>
          詳細
        </div>
        <div class='result_data'>
          <%= purchase.buy_item_detail %>
        </div>
      </div>
    </div>
  </div>
</div>
