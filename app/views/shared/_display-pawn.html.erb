<div class='pawn_result_main'>
  <div class='customer_data_box'>
    <div class='box_title data_back'>
      お客様情報
    </div>
    <div>
      <div class='customer_data_line'>
        <div class='display_pawn_category'>
          氏名
        </div>
        <div class='flex_left result_data'>
          <div class='first_name_column'>
            <%= customer.last_name %>
          </div>
          <div>
            <%= customer.first_name %>
          </div>
        </div>
      </div>
      <div class='customer_data_line'>
        <div class='display_pawn_category'>
          (カタカナ)
        </div>
        <div class='flex_left result_data'>
          <div class='first_name_column'>
            <%= customer.last_name_kana %>
          </div>
          <div>
            <%= customer.first_name_kana %>
          </div>
        </div>
      </div>
      <div class='customer_data_line'>
        <div class='display_pawn_category'>
          住所
        </div>
        <div class='result_data'>
          <%= customer.address %>
        </div>
      </div>
      <div class='customer_data_line'>
        <div class='display_pawn_category'>
          備考
        </div>
        <div class='result_data'>
          <%= customer.remarks %>
        </div>
      </div>
    </div>
  </div>
  <div class='pawn_data_box'>
    <div class='box_title data_back'>
      品物情報
    </div>
    <div class='data_back'>
      <div class='customer_data_line'>
        <div class='result_category'>
          品物名
        </div>
        <div class='result_data'>
          <%= pawn.item_name %>
        </div>
      </div>
      <div class='customer_data_line'>
        <div class='result_category'>
          金額
        </div>
        <div class='result_data'>
          <%= pawn.item_price.to_s(:delimited) %>円
        </div>
      </div>
      <div class='customer_data_line'>
        <div class='result_category'>
          詳細
        </div>
        <div class='result_data'>
          <%= pawn.item_detail %>
        </div>
      </div>
      <div class='customer_data_line'>
        <div class='result_category'>
          備考
        </div>
        <div class='result_data'>
          <%= pawn.item_remarks %>
        </div>
      </div>
      <div class='customer_data_line'>
        <div class='result_category'>
          利息金額
        </div>
        <div class='result_data'>
          <%= interest_calculator(pawn.item_price).to_s(:delimited) %>円
        </div>
      </div>
      <div class='customer_data_line'>
        <div class='result_category'>
          期限
        </div>
        <div class='result_data'>
          <%= pawn_timelimit(pawn.id) %>
        </div>
      </div>
    </div>
  </div>
</div>